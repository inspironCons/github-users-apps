<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="textColor">
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="textColor.Bold">
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>
    <style name="textColor.Bold.Center">
        <item name="android:textAlignment">center</item>
    </style>
    <style name="textColor.Regular">
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>
    <style name="textColor.Regular.Center">
        <item name="android:textAlignment">center</item>
    </style>
    <style name="textColor.Thin">
        <item name="android:fontFamily">@font/roboto_thin</item>
    </style>
    <style name="textColor.Thin.Center">
        <item name="android:textAlignment">center</item>
    </style>

    <style name="textInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:theme">@style/highlightCursor</item>
        <item name="hintEnabled">false</item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
    </style>
</resources>